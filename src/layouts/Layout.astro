---
interface Props {
  title?: string;
}

const { title = "Julio Cesar | Data Engineer" } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <nav>
      <a href="/" class="logo">JC</a>
      <div class="nav-links">
        <a href="/">Home</a>
        <a href="/about">About</a>
        <a href="/blog">Blog</a>
      </div>
    </nav>
    <slot />
  </body>
</html>

<style>
  html, body {
    margin: 0;
    width: 100%;
    min-height: 100%;
    font-family: Inter, Roboto, 'Helvetica Neue', Arial, sans-serif;
    background: linear-gradient(135deg, #fdf4f7 0%, #f0e6ff 50%, #e6f0ff 100%);
  }

  nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.5rem 2rem;
    max-width: 900px;
    margin: 0 auto;
  }

  .logo {
    font-weight: bold;
    font-size: 1.5rem;
    background: linear-gradient(83.21deg, #3245ff 0%, #bc52ee 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    text-decoration: none;
  }

  .nav-links {
    display: flex;
    gap: 2rem;
  }

  .nav-links a {
    color: #111827;
    text-decoration: none;
    transition: color 0.2s;
  }

  .nav-links a:hover {
    color: #bc52ee;
  }
</style>